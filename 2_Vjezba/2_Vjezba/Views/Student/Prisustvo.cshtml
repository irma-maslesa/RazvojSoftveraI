@using _2_Vjezba.EntityModels
@model StudentPrisustvoVM

@{
    ViewData["Title"] = "Prikaz";
}

<h1 class="display-4">Prisustva studenta @Model.Student </h1>

<br/>
<table class="table table-hover">
    <thead class="thead-dark text-center">
        <tr>
            <th>Predmet</th>
            <th>Datum</th>
        </tr>

    </thead>

    <tbody class="text-center">
        @foreach (StudentPrisustvoVM.Row s in Model.Prisustva)
        {
            <tr>
                <td class="align-middle">@s.NazivPredmeta</td>
                <td class="align-middle">@s.Datum.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>

</table>